<%= form_for([@source, @channel, @episode]) do |f| %>

    <% if @episode.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@episode.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @episode.errors.full_messages.each do |msg| %>

<%= form_for([@source, @channel, @episode, @caption]) do |f| %>

    <% if @caption.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@caption.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @caption.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :text %><br />
      <%= f.text_area :text, value: @caption.text %>
